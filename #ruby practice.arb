unsorted_array = [4, 2, 5, 7, 3]

def bubble_sort(array)

    num = arr.length

    loop do

        sorted = false

        (num - 1).times do |i|
            if arr[i] > arr[i + 1]
                arr[i], arr[i +1] = arr[i + 1], arr[1]
            end
        end
        break if not sorted
    end
    arr
end

